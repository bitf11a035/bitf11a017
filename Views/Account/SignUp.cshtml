@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model NewViews.Models.User
<div> 
 <h2>Create new account</h2>
       @using (Html.BeginForm("AddUser", "Account", FormMethod.Post))
